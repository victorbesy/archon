    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "args": [
                "-regression_config=regression_config.toml",
                "-system_config=system_config.toml",
                "-compile_commands=CompileCommands.toml",
                "-run_commands=RunCommands.toml"
                ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}